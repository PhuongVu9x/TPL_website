    slider3.SliderItems.Add(sliderItem3);
    slider3.SliderItems.Add(sliderItem3);
    slider3.SliderItems.Add(sliderItem3);
    slider3.SliderItems.Add(sliderItem3);

    var sliders = new List<TPLRes.Slider>();
    sliders.Add(slider1);
    sliders.Add(slider2);
    sliders.Add(slider3);
}

<h1 style="display: flex; justify-content: center; align-items: center;" class="mt-5">THIẾT KẾ CÔNG TRÌNH</h1>
<div id="contructorSlider" class="carousel slide carousel-slide carousel-dark ms-2 me-2" data-mdb-ride="carousel">
    <!-- Inner -->
    <div class="carousel-inner rounded-5 shadow-4-strong d-flex align-items-center">
        @foreach (var slider in sliders)
        {
            @Html.Partial("~/Views/Shared/Blog/_PartialContructionSlider.cshtml", slider)
        }
        <!-- Controls -->
        <div class="btn-slider d-flex align-items-center justify-content-center position-relative" style="width: 100%; height: auto;">
            <button class="carousel-control-prev position-absolute" type="button" data-mdb-target="#contructorSlider" data-mdb-slide="prev">
                <i class="fa-solid fa-circle-chevron-left fa-2xl text-light"></i>
                <span class="visually-hidden">Previous</span>
            </button>

            <button class="carousel-control-next position-absolute" type="button" data-mdb-target="#contructorSlider" data-mdb-slide="next">
                <i class="fa-solid fa-circle-chevron-right fa-2xl text-light"></i>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
