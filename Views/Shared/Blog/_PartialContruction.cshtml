    slider1.SliderItems = new List<TPLRes.SliderItem>();
    slider1.SliderItems.Add(sliderItem1);
    slider1.SliderItems.Add(sliderItem1);
    slider1.SliderItems.Add(sliderItem1);
    slider1.SliderItems.Add(sliderItem1);

    var slider2 = new TPLRes.Slider();
    slider2.Active = "carousel-item";
    var sliderItem2 = new TPLRes.SliderItem();
    sliderItem2.Si_Icon = "http://phuongvu-001-site1.itempurl.com/Resources/Images/thietke2.jpg";
    sliderItem2.Si_Title = "Mẫu thiết kế nhà chú phương quận gò vấp";
    sliderItem2.Si_Description = "Mẫu nhà phố 1 trệt lửng 2 lầu + tum che cấu thang Quý vị xem tham khảo mẫu nội thất.";
    slider2.SliderItems = new List<TPLRes.SliderItem>();
    slider2.SliderItems.Add(sliderItem2);
    slider2.SliderItems.Add(sliderItem2);
    slider2.SliderItems.Add(sliderItem2);
    slider2.SliderItems.Add(sliderItem2);

    var slider3 = new TPLRes.Slider();
    slider3.Active = "carousel-item";
    var sliderItem3 = new TPLRes.SliderItem();
    sliderItem3.Si_Icon = "http://phuongvu-001-site1.itempurl.com/Resources/Images/thietke3.jpg";
    sliderItem3.Si_Title = "Mẫu thiết kế nhà chú phương quận gò vấp";
    sliderItem3.Si_Description = "Mẫu nhà phố 1 trệt lửng 2 lầu + tum che cấu thang Quý vị xem tham khảo mẫu nội thất.";
